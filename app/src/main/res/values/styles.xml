<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color5</item>
        <item name="colorPrimaryDark">@color/color5</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@android:color/holo_red_dark</item>
        <item name="android:textColor">@color/color4</item>
        <item name="android:textColorHint">@color/textSubtitleColor</item>
        <item name="colorControlNormal">@color/color4</item>
        <item name="colorControlActivated">@color/color5</item>
        <item name="colorControlHighlight">@color/color5</item>
    </style>

    <style name="CustomTextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@android:color/holo_red_dark</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:textColorHint">@color/color3</item>
        <item name="colorControlNormal">@color/color3</item>
        <item name="colorControlActivated">@color/color3</item>
        <item name="colorControlHighlight">@color/color3</item>
    </style>
    
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

</resources>
