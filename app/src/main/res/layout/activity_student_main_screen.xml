<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.indilabz.student_helper.kaela.StudentMainScreen">

    <FrameLayout
        android:id="@+id/frame_container_stu"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toTopOf="@+id/navBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="72sp"
        android:background="@drawable/bottom_nav_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/group_id"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            app:bt_colorActive="@color/color5"
            app:bt_colorInactive="@color/color3"
            app:bt_icon="@drawable/ic_group"
            app:bt_iconHeight="24dp"
            app:bt_iconWidth="24dp"
            app:bt_shape="@drawable/back1_bottom"
            app:bt_title="Groups"
            app:layout_constraintEnd_toStartOf="@+id/ask_id"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="11dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/ask_id"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            app:bt_colorActive="@color/color5"
            app:bt_colorInactive="@color/color3"
            app:bt_icon="@drawable/ic_question"
            app:bt_iconHeight="24dp"
            app:bt_iconWidth="24dp"
            app:bt_shape="@drawable/back1_bottom"
            app:bt_title="Ask"
            app:layout_constraintEnd_toStartOf="@+id/chat_id"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/group_id"
            tools:layout_editor_absoluteY="11dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/chat_id"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            app:bt_colorActive="@color/color5"
            app:bt_colorInactive="@color/color3"
            app:bt_icon="@drawable/ic_chat"
            app:bt_iconHeight="24dp"
            app:bt_iconWidth="24dp"
            app:bt_shape="@drawable/back1_bottom"
            app:bt_title="chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ask_id"
            tools:layout_editor_absoluteY="11dp" />

    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>
</androidx.constraintlayout.widget.ConstraintLayout>


